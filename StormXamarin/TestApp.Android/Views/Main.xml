<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent">
	<Resources>
    	<Converter Key="StringToUpperConverter" Class="TestApp.Android.Converters.StringToUpperConverter" />
		<Converter Key="IntToColorConverter" Class="TestApp.Android.Converters.IntToColorConverter" />
		<Converter Key="ToStringConverter" Class="TestApp.Android.Converters.ToStringConverter" />

		<DataTemplate Key="SpinnerItemTemplate">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						  android:orientation="horizontal"
						  android:layout_width="fill_parent"
						  android:layout_height="fill_parent">
				
				<TextView android:layout_width="wrap_content"
						  android:layout_height="fill_parent"
						  text="{Binding}"
						  />
				<TextView android:layout_width="wrap_content"
						  android:layout_height="fill_parent"
						  android:text=" / "
						  />
				<TextView android:layout_width="wrap_content"
						  android:layout_height="fill_parent"
						  text="{Binding}"
						  />
				
			</LinearLayout>
		</DataTemplate>

		<TemplateSelector Key="SpinnerAdapter"
					  Class="Storm.Mvvm.TemplateSelectors.SimpleTemplateSelector"
					  View="{Resource SpinnerItemTemplate}"
					  />

	</Resources>
	
	<EditText android:layout_width="fill_parent"
			  android:layout_height="60dp"
			  android:text="{Binding InputText, Mode=TwoWay, UpdateEvent=TextChanged}"
			  />
	
	<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="{Binding ButtonText, Converter={Resource StringToUpperConverter}, ConverterParameter='True', Mode=OneWay}"
			click="{Binding ButtonCommand}" />
	
	<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="{Binding PushText}"
			click="{Binding PushAlertCommand}"
			/>
	
	<TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:text="{Binding InputText}"
			  />

	<TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  text="{Binding Data.Text}"
			  />

	<TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  text="{Binding Data.Text.Length}"
			  />

	<TextView android:id="CTextView"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  text="{Binding Data.Count}"
			  />

	<TextView android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  text="{Binding Converter={Resource ToStringConverter}}"
			  />	

	<View android:id="ColorPanel"
		  android:layout_width="40dp"
		  android:layout_height="40dp"
		  background="{Binding ColorStatic.Color, Converter={Resource IntToColorConverter}}"
		  />
	
	<Spinner android:id="ComboBox"
			 android:layout_width="120dp"
			 android:layout_height="40dp"
			 adapter="{Binding MyCollection, TemplateSelector={Resource SpinnerAdapter}}"
			 />
</LinearLayout>