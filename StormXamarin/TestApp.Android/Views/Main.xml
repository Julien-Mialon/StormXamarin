<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent">
	<Resources>
    	<Converter Key="StringToUpperConverter" Class="TestApp.Android.Converters.StringToUpperConverter" />
    </Resources>
	
	<EditText android:id="MyInputText"
			  android:layout_width="fill_parent"
			  android:layout_height="60dp"
			  android:text="{Binding InputText, Mode=TwoWay, UpdateEvent=TextChanged}"
			  />
	
	<Button android:id="MyButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="{Binding ButtonText, Converter={Resource StringToUpperConverter}, ConverterParameter='True', Mode=OneWay}"
			click="{Binding Path=ButtonCommand}" />
	
	<TextView android:id="MyTextView"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:text="{Binding InputText}"
			  />

	<TextView android:id="TTextView"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  text="{Binding Data.Text}"
			  />

	<TextView android:id="TCTextView"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  text="{Binding Data.Text.Length}"
			  />

	<TextView android:id="CTextView"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  text="{Binding Data.Count}"
			  />
</LinearLayout>